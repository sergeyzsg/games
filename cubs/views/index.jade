extends layout

block head
  script.
    require(['main']);

block content
  h1 Кубики

  div(class='row')
    div(class='col-md-6')
      div.well.well-white#game
        table(class='table table-striped table-bordered table-condensed', id='score')
          thead
            tr
              td №
          tbody

    div(class='col-md-6')
      div.well.well-white
          h3.text-center Видеосвязь
          div.well.well-sm
            video(id='localVideo', autoplay=true)
            div(id='remoteVideos')
            | Видео будет позже
            br

          div(class='well well-sm')
            button.btn.btn-default#add_player Добавить игрока
            //spacer
            = ' '
            button.btn.btn-default#start_game Начать игру

          div(class='well well-sm')
            h2 Ходит
              = ': '
              span#player_name
            h2 Выпало
              = ': '
              span#current_score

            div.well.well-sm.clearfix.cub-place
              div#table_dices

            div.well.well-sm.clearfix.cub-place
              div#winning_dices

          div(class='well well-sm')
            div.btn-group
              button.btn.btn-default#throw_dice Бросать
              button.btn.btn-default#end_move Закончить ход

